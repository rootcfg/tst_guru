<!DOCTYPE html>
<html>
  <head>
    <title>Tstguru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/menu' %>
    <%= render 'shared/messages' %>
    <% if user_signed_in? %>
      <p><%= render 'shared/card' %></p>
    <% end %>
      <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
