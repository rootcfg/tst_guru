<div class="ui secondary pointing menu">

  <% if user_signed_in? %>
    <%= link_to "Welcome #{ current_user.email }, to Test Guru", root_path, class: "active item"  %>
    <% if current_user.is_admin? %>
      <%= link_to '/admin/tests', class: "admin_access" do %>
        <i class='universal access icon'></i>
      <% end %>
    <% end %>
  <% end %>

  <div class="right menu">
    <% if user_signed_in? %>
      <%= button_to t('devise.helpers.logout'), destroy_user_session_path, method: :delete, class: "item"  %>
    <% else %>
      <%= link_to t('devise.helpers.login'), new_user_session_path , class: "item" %> <span style="margin-top: 10px;">|</span> <%= link_to t('devise.helpers.sign_up'), new_user_registration_path, class: "item" %>
  <% end %>
  </div>
</div>