<%= form_with url: 'create', class: "ui form", local: true do |form| %>

  <h4 class="ui dividing header">User Information</h4>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="field">
    <%= form.label :name %>
    <div class="two fields">
      <div class="field">
       <%= form.text_field 'first_name', placeholder: "#{current_user.first_name ||= 'First name'}" %>
      </div>
      <div class="field">
        <%= form.text_field 'last_name', placeholder: "#{current_user.last_name ||= 'Last name'}" %>
      </div>
    </div>
  </div>

  <h4 class="ui dividing header">Few words for us</h4>

  <div class="ui segment">
    <div class="field">
      <%= form.label 'feedbak' %>
      <%= form.text_field 'feedbak', rows: 5 %>
    </div>
  </div>

  <%= form.submit 'Submit', class: "ui button" %>

<% end %>