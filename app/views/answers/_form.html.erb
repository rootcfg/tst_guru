<%= form_with(model: [@question, @answer], local: true, class: "ui form") do |form| %>
<%= render 'layouts/messages'%>

  <div class="field">
    <%= form.label :body, cols: 7, rows: 3 %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit class: "ui primary red button" %>
  </div>
<% end %>
